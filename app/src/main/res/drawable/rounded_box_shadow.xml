<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/white" />
    <corners android:radius="50dp" /> <!-- Bo tròn 4 góc với bán kính 50dp -->
    <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" /> <!-- Độ dày của đổ bóng -->
    <stroke
        android:width="2dp"
        android:color="#DADADA" /> <!-- Màu sắc và độ dày của viền -->
    <gradient
        android:angle="225"
        android:endColor="#ECECEC"
        android:startColor="#F8F8F8" /> <!-- Màu sắc gradient của hộp -->
    <corners android:radius="50dp" /> <!-- Bo tròn 4 góc với bán kính 50dp -->
    <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" /> <!-- Reset độ dày của đổ bóng -->
</shape>
